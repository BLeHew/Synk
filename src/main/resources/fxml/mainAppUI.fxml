<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="632.0" prefWidth="1000" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainapp.MainAppUI">
   <children>
      <MenuBar layoutY="2.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane fx:id="anchorPaneProjects" layoutX="12.0" layoutY="29.0">
         <children>
            <TextArea fx:id="txtAreaProjectDesc" disable="true" layoutY="426.0" prefHeight="88.0" prefWidth="250.0" promptText="Project Description" />
            <Button id="btnAddProject" layoutY="527.0" mnemonicParsing="false" onAction="#addProject" text="Create Project" />
            <Button fx:id="btnRemoveProject" layoutX="151.0" layoutY="527.0" mnemonicParsing="false" onAction="#removeProject" text="Remove Project" />
            <TableView fx:id="tableViewProjects" editable="true" onMouseClicked="#showProjectTasksAndUsers" prefHeight="420.0" prefWidth="250.0">
              <columns>
                <TableColumn fx:id="columnProjectName" onEditCommit="#updateName" prefWidth="250.0" text="Project Name">
                  <cellValueFactory>
                      <PropertyValueFactory property="name" />
                  </cellValueFactory>
                  <cellFactory>
                      <TextFieldTableCell fx:factory="forTableColumn" />
                  </cellFactory>
              </TableColumn>
              </columns>
            </TableView>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="anchorPaneTasks" layoutX="278.0" layoutY="455.0">
         <children>
            <TextArea fx:id="txtAreaTaskDesc" editable="false" prefHeight="88.0" prefWidth="250.0" promptText="Task Description" />
            <Button fx:id="btnAddTask" layoutY="101.0" mnemonicParsing="false" onAction="#addTask" text="Create Task" />
            <Button fx:id="btnRemoveTask" disable="true" layoutX="134.0" layoutY="102.0" mnemonicParsing="false" onAction="#removeTask" prefHeight="25.0" prefWidth="116.0" text="Remove Task" />
         </children>
      </AnchorPane>
      <ListView fx:id="listViewUsers" editable="true" layoutX="547.0" layoutY="52.0" prefHeight="397.0" prefWidth="220.0" />
      <Button layoutX="555.0" layoutY="556.0" mnemonicParsing="false" onAction="#assignUser" text="Assign User" />
      <Button layoutX="640.0" layoutY="557.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="134.0" text="Remove User Assign" />
      <TableView fx:id="tableViewTasks" editable="true" layoutX="278.0" layoutY="29.0" onMouseClicked="#narrowUsers" prefHeight="420.0" prefWidth="250.0">
        <columns>
          <TableColumn fx:id="columnTaskName" onEditCommit="#updateName" prefWidth="200.0" text="Task Name">
                  <cellValueFactory> <PropertyValueFactory property="name" /> </cellValueFactory>
                  <cellFactory> <TextFieldTableCell fx:factory="forTableColumn" /> </cellFactory>
          </TableColumn>
          <TableColumn fx:id="columnTaskPercent" onEditCommit="#updateTaskPercentage" prefWidth="50.0" text="\%">
                <cellValueFactory> <PropertyValueFactory property="pctComplete" /> </cellValueFactory>
                <cellFactory> <TextFieldTableCell fx:factory="forTableColumn" /> </cellFactory>
          </TableColumn>
        </columns>
      </TableView>
      <TableView fx:id="tableViewAllUsers" layoutX="786.0" layoutY="27.0" prefHeight="420.0" prefWidth="200.0">
        <columns>
          <TableColumn prefWidth="200.0" text="All Users">
                  <cellValueFactory> <PropertyValueFactory property="name" /> </cellValueFactory>
                  <cellFactory><TextFieldTableCell fx:factory="forTableColumn" /> </cellFactory>
          </TableColumn>
        </columns>
      </TableView>
      <TextField fx:id="txtFieldSearch" layoutX="786.0" layoutY="455.0" onInputMethodTextChanged="#search" prefHeight="25.0" prefWidth="200.0" />
      <Button layoutX="786.0" layoutY="494.0" mnemonicParsing="false" onAction="#search" prefHeight="88.0" prefWidth="99.0" text="Search" />
      <Button layoutX="886.0" layoutY="494.0" mnemonicParsing="false" onAction="#getUsers" prefHeight="88.0" prefWidth="99.0" text="Show Users (May be slow)" textAlignment="CENTER" wrapText="true" />
   </children>
</AnchorPane>
