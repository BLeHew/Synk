<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="loginScreen" prefHeight="336.0" prefWidth="354.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginScreen">
   <children>
      <TextField fx:id="txtFieldUsername" layoutX="3.0" onAction="#login" prefHeight="50.0" prefWidth="350.0" promptText="Username">
         <font>
            <Font size="23.0" />
         </font></TextField>
      <PasswordField fx:id="passwordFieldPassword" layoutX="4.0" layoutY="51.0" onAction="#login" prefHeight="50.0" prefWidth="350.0" promptText="Password">
         <font>
            <Font size="26.0" />
         </font></PasswordField>
      <Button fx:id="btnLogin" layoutX="204.0" layoutY="271.0" mnemonicParsing="false" onAction="#login" prefHeight="56.0" prefWidth="149.0" text="Login">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Button id="btnRegister" fx:id="btnRegister" layoutX="4.0" layoutY="271.0" mnemonicParsing="false" onAction="#register" prefHeight="56.0" prefWidth="159.0" text="Register">
         <font>
            <Font size="24.0" />
         </font></Button>
      <TextField fx:id="txtFieldError" layoutX="7.0" layoutY="240.0" prefHeight="31.0" prefWidth="340.0" style="-fx-text-fill: red; -fx-background-color: white;" />
      <AnchorPane fx:id="paneRegister" layoutX="1.0" layoutY="109.0" prefHeight="130.0" prefWidth="353.0" visible="false">
         <children>
            <PasswordField fx:id="passwordFieldRetype" layoutX="2.0" prefHeight="50.0" prefWidth="350.0" promptText="Re-Type Password">
               <font>
                  <Font size="26.0" />
               </font>
            </PasswordField>
            <TextField fx:id="txtFieldEmail" layoutX="2.0" layoutY="56.0" prefHeight="50.0" prefWidth="350.0" promptText="Enter Email">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <Button fx:id="btnCancelRegistration" layoutX="2.0" layoutY="106.0" mnemonicParsing="false" onAction="#cancelRegistration" prefHeight="56.0" prefWidth="350.0" text="Cancel Registration">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
